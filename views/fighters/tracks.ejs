<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Beat Library</title>
	<% include /partials/head.ejs %>
</head>
<body>
<header>
	<% include /partials/header.ejs %>
</header>
<center>
<h1></h1>
<table class="clean responsive">
	<thead>
		<th>ID</th>
		<th>Title</th>
		<th>Author</th>
		<th>Year</th>
		<th>Track</th>
		<th></th>
	</thead>
	<tbody>
			<%tracks.forEach(function(track){%>
			<tr>
				<td class="id">
					<%= track.id%><br>
				</td>
				<td class="track">
					<a href="/tracks/<%=track.id%>">
					<%= track.title%><br></a>
				</td>
				<td class="author">
					<%= track.author%><br>
				</td>
				<td class="year">
					<%= track.year%><br>
				</td>
				<td>
				<audio controls="controls"> <source src="http://developer.mozilla.org/@api/deki/files/2926/=AudioTest_(1).ogg" type="audio/wav"></audio>
				<br>
				</td>
				<td>
				<form action="/tracks/<%= track.id %>?_method=delete" method="POST">
					<button type="submit">Delete</button>
					</form>
				</td>
			</tr>
			<%});%>
		
			
	</tbody>
</table>

<a class="btn btn-primary" href="/tracks/new">Add a new track!</a>

</center>
</table>
</body>
</html>